              <mrow>
                <mi>z</mi>
                <mo>&#x2208;</mo>
                <mi>x</mi>
              </mrow>
              <mo>&#x2194;</mo>
              <mrow>
                <mi>z</mi>
                <mo>&#x2208;</mo>
                <mi>y</mi>
