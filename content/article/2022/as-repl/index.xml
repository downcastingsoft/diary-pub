    <math display="block">
      <mrow>
        <mo>&#x2200;</mo>
        <mi>x</mi>
        <mo>,</mo>
        <mo>&#x2200;</mo>
        <mi>y</mi>
        <mrow>
          <mo>(</mo>
          <mrow>
            <mo>&#x2200;</mo>
            <mi>z</mi>
            <mrow>
