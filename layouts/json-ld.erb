{
    "@context": "http://schema.org",
    "@type": "<%= @item[:jsonld][:type] %>",
    "headline": "<%= @item[:title] %>",
    <%- if @item[:created_at] -%>
    "datePublished": "<%= @item[:created_at].strftime("%FT%T%:z") %>",
    <%- end -%>
    <%- if @item[:updated_at] -%>
    "dateModified": "<% @item[:updated_at].strftime("%FT%T%:z") %>",
    <%- end -%>
    "author": {
        "@type": "Person",
        "name": "<%= @item[:author] %>"
    },
    "publisher": {
        "@type": "Organization",
        "name": "Downcastingsoft"
    },
    "description": "<% @item[:description] %>"
}
