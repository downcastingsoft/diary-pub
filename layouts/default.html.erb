<%- title = (defined? html_title) ? html_title : @item[:title] -%>
<!DOCTYPE html>
<html lang="ja">
  <head prefix="og:http://ogp.me/ns#">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="generator" content="nanoc <%= Nanoc::VERSION %>">
    <title><%= title %></title>
    <link href="/stylesheet.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript" async
      src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.9/latest.js?config=MML_CHTML">
    </script>

    <meta property="og:title" content="<%= title %>">
    <meta property="og:site_name" content="日記">
    <%- if @item[:ogtype] -%>
    <meta property="og:type" content="<%= @item[:ogtype] %>">
    <%- end -%>
    <%- if @item[:ogtype] == 'article' -%>
    <%- summary = @item[:excerpt] -%>
    <meta property="og:description" content="<%= summary %>">
    <%- end -%>

    <%- if @item[:created_at] -%>
    <meta property="article:published_time" content="<%= item[:created_at].strftime("%FT%T%:z") %>" />
    <%- end -%>

    <%- if @item[:updated_at] -%>
    <meta property="article:modified_time" content="<%= item[:updated_at].strftime("%FT%T%:z") %>" />
    <%- end -%>
  </head>
  <body>
    <nav id="site-nav">
      <span>
        <a class="nav-item" href="/">日記</a>
      </span>
    </nav>
    <div id="page-container">
      <main>
        <%= yield %>
      </main>
      <footer id="site-fotter">
        <a href="/">Top</a>
        <a href="/about/">About</a>
        <a href="/atom.xml">Feed</a>
        <a href="https://www.downcastingsoft.net/">www.downcastingsoft.net</a>
      </footer>
    </div>
  </body>
</html>
